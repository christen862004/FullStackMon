@model List<Department>
@{
    ViewData["Title"] = "Index";
    int index = 1;
    Layout = "_AdvLayout";
}

<h1>Index</h1>
<a href="/Department/New">New</a>
<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>No </th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@(index++)</td>
            <td>@item.Name</td>
        </tr>
    }
</table>
