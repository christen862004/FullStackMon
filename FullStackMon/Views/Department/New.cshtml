@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>
<!--url:/Department/SaveNew?Name= &ManagerName=-->
<form method="post" action="/Department/SaveNew">
    <div>
        <label for="Name">Name</label>
        <input name="Name" id="Name" value="@Model?.Name"  class="form form-control" />
    </div>
    <div>
        <label for="ManagerName">Manager Name</label>
        <input name="ManagerName" id="ManagerName" value="@Model?.ManagerName" class="form form-control" />
    </div>
    <input type="submit" value="Create" class="btn btn-success"/>
</form>
<a href="/DEpartment/index">Back To List</a>