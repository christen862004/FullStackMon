@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptItems = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<form asp-action="SaveNew" asp-controller="Employee" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form form-control" asp-for="Address"/>
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input class="form form-control" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="JobTitle"></label>
        <input class="form form-control" asp-for="JobTitle"/>
        <span asp-validation-for="JobTitle" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        @* <input class="form form-control" asp-for="DepartmentId"/> *@
        <select asp-for="DepartmentId" asp-items="DeptItems" class="form form-control">
           <option value="0">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>

    </div>
    <input type="submit" value="Create" class="btn btn-primary" /> 
</form>
<a asp-action="Index" asp-controller="Employee">Back To List</a>

